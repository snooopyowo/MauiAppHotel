<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#F3F6F8">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#005F73</Color>
            <Color x:Key="AccentColor">#EE9B00</Color>
            <Color x:Key="LightBackground">#FFFFFF</Color>
            <Color x:Key="BorderColor">#DADADA</Color>
            <Color x:Key="TextDark">#1A1A1A</Color>
            <Color x:Key="TextSecondary">#5C5C5C</Color>

            <Style x:Key="TitleLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="FontFamily" Value="Kalam" />
                <Setter Property="FontSize" Value="48" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <Style x:Key="FrameCardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{StaticResource LightBackground}" />
                <Setter Property="BorderColor" Value="{StaticResource BorderColor}" />
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Padding" Value="15" />
                <Setter Property="Margin" Value="10" />
            </Style>

            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="WidthRequest" Value="160" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout VerticalOptions="CenterAndExpand"
                             Padding="20"
                             Spacing="20">
            
            <Label Text="Suíte Super Luxo"
                   Style="{StaticResource TitleLabelStyle}" />

            <Frame Style="{StaticResource FrameCardStyle}">
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Spacing="30">
                    <HorizontalStackLayout>
                        <Label Text="Adultos: " TextColor="{StaticResource TextSecondary}" FontSize="16"/>
                        <Label Text="2" TextColor="{StaticResource PrimaryColor}" FontSize="16" FontAttributes="Bold"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="Crianças: " TextColor="{StaticResource TextSecondary}" FontSize="16"/>
                        <Label Text="1" TextColor="{StaticResource PrimaryColor}" FontSize="16" FontAttributes="Bold"/>
                    </HorizontalStackLayout>
                </HorizontalStackLayout>
            </Frame>

            <Frame Style="{StaticResource FrameCardStyle}">
                <Grid ColumnDefinitions="*, *, *"
                      RowDefinitions="Auto, Auto"
                      ColumnSpacing="15"
                      RowSpacing="5">

                    <Label Grid.Row="0" Grid.Column="0" Text="Check-in:" TextColor="{StaticResource TextSecondary}" FontAttributes="Bold" />
                    <Label Grid.Row="0" Grid.Column="1" Text="Check-out:" TextColor="{StaticResource TextSecondary}" FontAttributes="Bold" />
                    <Label Grid.Row="0" Grid.Column="2" Text="Estadia:" TextColor="{StaticResource TextSecondary}" FontAttributes="Bold" />

                    <Label Grid.Row="1" Grid.Column="0" Text="27/05/2024" TextColor="{StaticResource TextDark}" />
                    <Label Grid.Row="1" Grid.Column="1" Text="30/05/2024" TextColor="{StaticResource TextDark}" />
                    <Label Grid.Row="1" Grid.Column="2" Text="3 noites" TextColor="{StaticResource TextDark}" />
                </Grid>
            </Frame>

            <Frame Style="{StaticResource FrameCardStyle}">
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Spacing="10">
                    <Label Text="Valor Total:" TextColor="{StaticResource AccentColor}" FontSize="18" FontAttributes="Bold" />
                    <Label Text="R$ 750,00" TextColor="{StaticResource PrimaryColor}" FontSize="22" FontAttributes="Bold" />
                </HorizontalStackLayout>
            </Frame>

            <Button Text="Voltar"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Clicked="Button_Clicked"
                    HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>